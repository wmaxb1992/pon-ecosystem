# Live AI Terminal Configuration Template
# Copy this file to ~/.config/live-ai-terminal/config.env and customize

# Grok API Configuration
GROK_API_KEY=your_grok_api_key_here
GROK_MODEL=grok-beta

# Sentry Configuration (optional)
SENTRY_DSN=your_sentry_dsn_here

# System Paths
LOG_DIR=/var/log/live-ai-terminal
DATA_DIR=/var/lib/live-ai-terminal

# AI System Settings
AI_MEMORY_DB_PATH=/var/lib/live-ai-terminal/ai_memory.db
MAX_LOG_LINES=10000
AUTO_IMPROVE_INTERVAL=3600

# Service Management
BACKEND_PORT=8000
FRONTEND_PORT=3000
ENABLE_AUTO_START=true

# Security Settings
ENABLE_SECURITY_MONITOR=true
VPN_REQUIRED=false
